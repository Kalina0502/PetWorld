@model ProfileDetailsViewModel

@{
    ViewData["Title"] = "Profile Details";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="profile-details">

    <section class="owner-info">
        <h3>My information</h3>
        <div class="info-box">
            <p><strong>Name:</strong> @Model.PetOwner.PetOwnerFirstName @Model.PetOwner.PetOwnerLastName</p>
            <p><strong>Age:</strong> @Model.PetOwner.Age</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>Email:</strong> @Model.PetOwner.Email</p>
            <p><strong>Phone Number:</strong> @Model.PetOwner.PhoneNumber</p>
        </div>
    </section>

    <section class="pets-info">
        <h3>Pets</h3>
        <div class="info-box swiper-container">
            @if (Model.Pets.Any())
            {
                <div class="swiper-wrapper">
                    @foreach (var pet in Model.Pets)
                    {
                        <div class="pet-item swiper-slide">
                            <div class="pet-details">
                                <p><strong>Name:</strong> @pet.Name</p>
                                <p><strong>City:</strong> @pet.City</p>
                            </div>
                            <img class="pet-image" src="@pet.ImageUrl" alt="@pet.Name" />
                        </div>

                    }
                </div>
            }
            else
            {
                <p>No pets found.</p>
            }
        </div>
    </section>

    <section class="reservations-info">
        <h3>Hotel Reservations</h3>
        <div class="info-box swiper-container">
            @if (Model.HotelReservations.Any())
            {
                <div class="swiper-wrapper">
                    @foreach (var reservation in Model.HotelReservations)
                    {
                        <div class="reservation-item swiper-slide">
                            <p><strong>Room Type:</strong> @reservation.RoomType</p>
                            <p><strong>Check-in:</strong> @reservation.CheckInDate.ToString("dd/MM/yyyy")</p>
                            <p><strong>Check-out:</strong> @reservation.CheckOutDate.ToString("dd/MM/yyyy")</p>
                            <p><strong>Includes Food:</strong> @reservation.IncludesFood</p>
                            <p><strong>Includes Walk:</strong> @reservation.IncludesWalk</p>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No hotel reservations found.</p>
            }
        </div>
    </section>
    <div class="back-link">
        <a href="@Url.Action("Index", "Profile")">Back to list</a>
    </div>
</div>

<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 3,
            spaceBetween: 10,
            loop: false
        });
    });
</script>

<style>
    .info-box {
        width: 95%;
        max-width: 700px;
        padding: 10px;
        background-color: #cccccc; 
        border-radius: 5px;
        margin: 0 auto;
        overflow: hidden;
    }

    .swiper-container {
        width: 100%; 
    }

    .profile-details {
        text-align: center; 
    }

    .swiper-slide {
        display: flex;
        flex-direction: column; 
        align-items: center;
    }

    .pet-image {
        width: 170px;
        height: 100px;
        border-radius: 10px;
    }

    .pet-item, .reservation-item {
        border: 1px solid #000;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 10px;
    }
</style>
