@model ProfileDetailsViewModel

@{
    ViewData["Title"] = "Profile Details";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="profile-details">

    <!-- Информация за собственика на животните -->
    <section class="owner-info">
        <h3>Your information</h3>
        <div class="info-box">
            <p><strong>Name:</strong> @Model.PetOwner.PetOwnerFirstName @Model.PetOwner.PetOwnerLastName</p>
            <p><strong>Age:</strong> @Model.PetOwner.Age</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>Email:</strong> @Model.PetOwner.Email</p>
            <p><strong>Phone Number:</strong> @Model.PetOwner.PhoneNumber</p>
        </div>
        <div class="row">
            <div class="col-md-12 mb-3">
                <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </section>

    <section class="pets-info">
        <h3>Pets</h3>
        <div class="info-box">
            @if (Model.Pets.Any())
            {
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        @foreach (var pet in Model.Pets)
                        {
                            <div class="swiper-slide">
                                <div class="pet-item">
                                    <p><strong>Name:</strong> @pet.Name</p>
                                    <p><strong>City:</strong> @pet.City</p>
                                    <img class="pet-image" src="@pet.ImageUrl" alt="@pet.Name" />
                                </div>
                            </div>
                        }
                    </div>

                </div>
            }
            else
            {
                <p>No pets found.</p>
            }
            <!-- Button for adding a pet -->
            <form method="get" action="@Url.Action("Add", "Profile")">
                <input type="submit" value="Add Pet" class="btn btn-danger" />
            </form>
        </div>
    </section>

    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <style>
        .swiper-button-prev, .swiper-button-next {
            width: 30px;
            height: 30px;
            top: 50%;
            transform: translateY(-50%);
            background-color: #ccc;
            border-radius: 50%;
        }

        .reservations-info .info-box .swiper-button-prev {
            left: -40px;
        }

        .reservations-info .info-box .swiper-button-next {
            right: -40px;
        }

        .reservations-info .info-box {
            overflow: hidden;
        }

        .swiper-container {
            width: 100%;
            height: auto;
        }

        .swiper-wrapper {
            height: auto;
        }

        .reservation-item {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }
    </style>


    <!-- Списък с осиновявания -->
    <section class="adoptions-info">
        <h3>Adoptions</h3>
        <div class="info-box">
            @if (Model.Adoptions.Any())
            {
                <ul class="adoption-list">
                    @foreach (var adoption in Model.Adoptions)
                    {
                        <li class="adoption-item">
                            <p><strong>Adoption Details:</strong> <!-- Добавете специфични детайли за осиновяването --></p>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No adoptions found.</p>
            }
        </div>
    </section>

</div>

<!-- Стилове за новия дизайн -->
