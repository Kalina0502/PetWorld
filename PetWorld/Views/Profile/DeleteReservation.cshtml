@model PetWorld.Core.Models.Hotel.HotelRoomServiceModel

@{
    ViewData["Title"] = "Delete Reservation";
}

<div class="delete-reservation">

    <!-- Информация за резервацията -->
    <section class="reservation-info">
        <h3>Delete Reservation</h3>
        <div class="info-box">
            <p><strong>Room Type:</strong> @Model.RoomType</p>
            <p><strong>Check-in:</strong> @Model.CheckInDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Check-out:</strong> @Model.CheckOutDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Includes Food:</strong> @(Model.IncludesFood ? "Yes" : "No")</p>
            <p><strong>Includes Walk:</strong> @(Model.IncludesWalk ? "Yes" : "No")</p>
        </div>

        <!-- Потвърждение за изтриване -->
        <div class="confirm-deletion">
            <p>Are you sure you want to delete this reservation?</p>
            <form method="post" action="@Url.Action("DeleteReservation", new { id = Model.Id })">
                <input type="submit" value="Yes, delete this reservation" class="btn btn-danger" />
                <a href="@Url.Action("Details")" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </section>

    <!-- Стилове за дизайна -->
    <style>
        .delete-reservation {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .info-box {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .confirm-deletion {
            margin-top: 20px;
            text-align: center;
        }

            .confirm-deletion p {
                margin-bottom: 10px;
            }

        .btn {
            padding: 10px 20px;
            margin-right: 10px;
        }
    </style>
</div>
