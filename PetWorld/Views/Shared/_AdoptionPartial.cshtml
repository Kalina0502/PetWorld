@model AdoptionServiceModel
@inject IAdoptionService adoptionService
@inject IAgentService agentService

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Pet Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>City: <b>@Model.City</b></h6>

            <a asp-controller="Adoption" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>
            @if (this.User.Identity.IsAuthenticated)
            {
                <a asp-controller="Adoption" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-warning">Edit</a>
                <a asp-controller="Adoption" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger">Delete</a>
                <p></p>
            }
            <a asp-controller="Adoption" asp-action="Adopt" asp-route-id="@Model.Id"
               class="btn btn-success">Adopt</a>
        </div>
    </div>
</div>

