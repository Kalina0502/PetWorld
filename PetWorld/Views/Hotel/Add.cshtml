@model HotelRoomFormModel

@{
    ViewData["Title"] = "Add new hotel room";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />


<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
    <form method="post">
        <div class="form-group">
            <label asp-for="RoomTypeId"></label>
            <select asp-for="RoomTypeId" class="form-control">
                @foreach (var roomType in Model.AllRoomTypes)
                {
                    <option value="@roomType.Id">@roomType.Name</option>
                }
            </select>
            <span asp-validation-for="RoomTypeId" class="small text-danger"></span>
        </div>

        <div class="text-center">
            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}